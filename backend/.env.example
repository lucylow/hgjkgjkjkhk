# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/fleetvision_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# ML Model Configuration
MODEL_VERSION=v1.0
MODEL_PATH=models/failure_predictor_v1.0.pkl
ANOMALY_THRESHOLD=2.0

# Salesforce/Agentforce Configuration
SALESFORCE_API_KEY=your_salesforce_api_key
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
AGENTFORCE_WEBHOOK_URL=https://your-agentforce-webhook.url

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-token
SLACK_CHANNEL=predictive-maintenance

# Tableau Configuration
TABLEAU_SERVER_URL=https://your-tableau-server.com
TABLEAU_API_KEY=your_tableau_api_key
TABLEAU_SITE_ID=your_site_id

# Kafka Configuration (for real-time streaming)
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC_SENSORS=sensor_readings
KAFKA_TOPIC_PREDICTIONS=predictions

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Solana Configuration (for audit trails)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PROGRAM_ID=your_program_id

# MQTT Configuration (for IoT devices)
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC_PREFIX=equipment/+/sensors

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
